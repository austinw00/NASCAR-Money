@page "/"
@inject NASCAR_Money.Helpers.IEventIdHelper EventIdHelper
@using System

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<p>
    The upcoming cup event id: @upcomingCupEventId
    The upcoming cup event id: @previousCupEventId

</p>
@if (upcomingCupEventId == null)
{
   <h1>loading</h1>
}
else
{
    <NASCAR_Money.Pages.Components.RaceWeekend year="2023" seriesId="1" eventId="5289"> </NASCAR_Money.Pages.Components.RaceWeekend>
}


@code {
    private int upcomingCupEventId;
    private int previousCupEventId;

    protected override async Task OnInitializedAsync()
    {
        upcomingCupEventId = await EventIdHelper.GetPreviousCupEventId(DateTime.Now);
        previousCupEventId = await EventIdHelper.GetUpcomingCupEventId(DateTime.Now);
    }
}
